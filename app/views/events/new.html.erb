<% provide(:title, 'Submit New Event') %>
<% btn_text = String.new %>
<% header_text = String.new %>
<% if signed_in? %>
  <% btn_text = "Create event" %>
  <% header_text = "New Event Submission" %>
<% else %>
  <% btn_text = "Submit event suggestion" %>
  <% header_text = "New Event Suggestion" %>
<% end %>
<h1><%=header_text%></h1>
<h2>
  At minimum, please provide the name, location, and a short description.
</h2>
<div class="row">
  <div class="span6 offset3">
	<%= form_for(@event) do |f| %>

	  <%= render 'shared/error_messages' %>

	  <%= f.label :name %>
	  <%= f.text_field :name %>

	  <%= f.label :location %>
	  <%= f.text_field :location %>

	  <%= f.label :address %>
	  <%= f.text_field :address %>

	  <%= f.label :date %>
	  <%= f.date_select :date %>

	  <br>
	  <%= f.check_box :date_applicable, 
			:style => "float:left; margin-right:10px" %> 
	  <%= f.label :date_applicable, "Specific date not applicable" %>

	  <%= f.label :time %>
	  <%= f.time_select :time, ampm: true %>
	
	  <%= f.check_box :all_day, :style => "float:left; margin-right:10px" %>
	  <%= f.label :all_day, "All day" %>
	  
	  <%= f.label :repeat %>
	  <%= f.enum_select :repeat %>

	  <%= f.label :day, "On" %>
	  <%= f.enum_select :day %>

	  <%= f.label :website %>
	  <%= f.text_field :website %>

	  <%= f.label :cost %>
	  <%= f.enum_select :cost %>

	  <%= f.label :age_restrict, "Age restriction" %>
	  <%= f.enum_select :age_restrict %>

	  <%= f.label :label, "Category" %>
	  <%= f.enum_select :label %>

	  <%= f.label :description %>
	  <%= f.text_area :description, :rows=>5 %>		

	  <%= f.submit "#{btn_text}", class: "btn btn-large btn-primary" %>
	<% end %>
  </div>
</div>
